<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base dim to improve contrast -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
        </shape>
    </item>

    <!-- Top-to-bottom subtle gradient (slightly darker top) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#44000000"
                android:centerColor="#22000000"
                android:endColor="#33000000" />
        </shape>
    </item>

    <!-- Vignette-like edges (approx) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="50%"
                android:centerY="45%"
                android:startColor="#00000000"
                android:endColor="#66000000" />
        </shape>
    </item>

</layer-list>
