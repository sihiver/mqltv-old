<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mql_bg">

    <LinearLayout
        android:id="@+id/nav_panel"
        android:layout_width="@dimen/nav_width_collapsed"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/mql_panel"
        android:paddingStart="@dimen/nav_panel_padding_h_collapsed"
        android:paddingEnd="@dimen/nav_panel_padding_h_collapsed"
        android:paddingTop="@dimen/nav_panel_padding_v"
        android:paddingBottom="@dimen/nav_panel_padding_v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/nav_header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/nav_item_bg"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:id="@+id/nav_logo"
                android:layout_width="@dimen/nav_icon_container_size"
                android:layout_height="@dimen/nav_icon_container_size"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:background="@drawable/logo_circle_bg"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/nav_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="@string/app_name"
                android:textColor="@color/mql_text_primary"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nav_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:overScrollMode="never" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:id="@+id/nav_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nav_action_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_item_height"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/nav_item_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="@dimen/nav_icon_container_size"
                    android:layout_height="@dimen/nav_icon_container_size"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_manage"
                    android:contentDescription="Settings" />

                <TextView
                    android:id="@+id/nav_action_settings_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Settings"
                    android:textColor="@color/mql_text_primary"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:id="@+id/nav_action_help"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_item_height"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/nav_item_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="@dimen/nav_icon_container_size"
                    android:layout_height="@dimen/nav_icon_container_size"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:contentDescription="Help" />

                <TextView
                    android:id="@+id/nav_action_help_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Help"
                    android:textColor="@color/mql_text_primary"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintStart_toEndOf="@id/nav_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
