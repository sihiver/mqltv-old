<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mql_bg">

    <ImageView
        android:id="@+id/launcher_wallpaper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/launcher_wallpaper_fallback"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/launcher_wallpaper_dim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/launcher_wallpaper_overlay"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Safe area to reduce TV overscan clipping -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/launcher_safe_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/launcher_safe_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/launcher_safe_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/launcher_safe_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <ImageView
        android:id="@+id/launcher_logo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/ic_launcher"
        android:padding="6dp"
        android:background="@drawable/logo_circle_bg"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="@id/launcher_safe_left"
        app:layout_constraintTop_toTopOf="@id/launcher_safe_top"
        android:layout_marginTop="22dp" />

    <LinearLayout
        android:id="@+id/launcher_search"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/launcher_search_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/launcher_logo"
        app:layout_constraintEnd_toStartOf="@id/launcher_actions"
        app:layout_constraintTop_toTopOf="@id/launcher_logo"
        app:layout_constraintBottom_toBottomOf="@id/launcher_logo"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@android:drawable/ic_menu_search"
            android:tint="@color/mql_text_secondary"
            android:contentDescription="Search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Search"
            android:textColor="@color/mql_text_secondary"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:tint="@color/mql_text_secondary"
            android:contentDescription="Mic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/launcher_actions"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/launcher_safe_right"
        app:layout_constraintTop_toTopOf="@id/launcher_logo"
        app:layout_constraintBottom_toBottomOf="@id/launcher_logo"
        android:layout_marginEnd="0dp">

        <ImageView
            android:id="@+id/launcher_settings"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="10dp"
            android:background="@drawable/launcher_icon_bg"
            android:src="@android:drawable/ic_menu_manage"
            android:tint="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="Settings" />

        <View
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/launcher_profile"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="8dp"
            android:background="@drawable/launcher_icon_bg"
            android:src="@android:drawable/sym_def_app_icon"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="Profile" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/launcher_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        app:layout_constraintStart_toStartOf="@id/launcher_safe_left"
        app:layout_constraintEnd_toEndOf="@id/launcher_safe_right"
        app:layout_constraintTop_toBottomOf="@id/launcher_logo"
        app:layout_constraintBottom_toTopOf="@id/launcher_safe_bottom"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/launcher_cards"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:overScrollMode="never"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/launcher_apps_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/launcher_apps_title"
                android:textColor="@color/mql_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/launcher_apps"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:overScrollMode="never"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/launcher_recent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/launcher_recent_live_title"
                android:textColor="@color/mql_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/launcher_recent_live"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:overScrollMode="never"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
