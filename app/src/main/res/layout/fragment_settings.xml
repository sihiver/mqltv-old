<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mql_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengaturan"
        android:textColor="@color/mql_text_primary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Switch player untuk debug (OK untuk memilih)."
        android:textColor="@color/mql_text_secondary"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Playback Engine"
        android:textColor="@color/mql_text_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/player_mode_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/player_mode_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto (recommended)"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/player_mode_exo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExoPlayer (Media3)"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/player_mode_exo_legacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExoPlayer 2.13.3 (legacy)"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/player_mode_vlc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VLC (LibVLC)"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Catatan: setelah ganti player, buka channel lagi."
        android:textColor="@color/mql_text_secondary"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Debug Options"
        android:textColor="@color/mql_text_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/setting_exo_limit_480p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Exo: limit to 480p (reduce FHD lag)"
        android:textColor="@color/mql_text_primary"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Launcher Wallpaper"
        android:textColor="@color/mql_text_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wallpaper_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status: Default"
        android:textColor="@color/mql_text_secondary"
        android:textSize="14sp" />

    <Button
        android:id="@+id/wallpaper_pick_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Pilih Wallpaper (File)"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:id="@+id/wallpaper_set_url_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Set Wallpaper dari URL"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:id="@+id/wallpaper_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Reset Wallpaper"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="VLC hardware decoding"
        android:textColor="@color/mql_text_primary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/vlc_hw_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/vlc_hw_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/vlc_hw_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HW ON (mediacodec)"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/vlc_hw_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HW+ (mediacodec direct render)"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/vlc_hw_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HW OFF (software)"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="VLC HW decoder impl"
        android:textColor="@color/mql_text_primary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/vlc_hw_impl_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/vlc_hw_impl_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/vlc_hw_impl_mediacodec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mediacodec"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/vlc_hw_impl_mediacodec_ndk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mediacodec_ndk"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </RadioGroup>

    <Switch
        android:id="@+id/setting_vlc_hw_force_only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Force HW only (disable SW fallback)"
        android:textColor="@color/mql_text_primary"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Switch
        android:id="@+id/setting_vlc_texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="VLC output: TextureView (uncheck = SurfaceView)"
        android:textColor="@color/mql_text_primary"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Switch
        android:id="@+id/setting_vlc_deinterlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="VLC deinterlace (untuk video interlaced)"
        android:textColor="@color/mql_text_primary"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="VLC video output (vout)"
        android:textColor="@color/mql_text_primary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/vlc_vout_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/vlc_vout_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/vlc_vout_android_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android_display (recommended for some STB)"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/vlc_vout_android_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android_surface"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/vlc_vout_gles2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gles2 (OpenGL)"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="VLC Network Caching"
        android:textColor="@color/mql_text_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/vlc_caching_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/vlc_caching_1500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500 ms (default)"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/vlc_caching_3000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000 ms"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/vlc_caching_5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000 ms"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RadioButton
            android:id="@+id/vlc_caching_10000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000 ms (max buffer)"
            android:textColor="@color/mql_text_primary"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </RadioGroup>

    <Button
        android:id="@+id/vlc_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reset VLC Settings"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    </LinearLayout>

</ScrollView>
