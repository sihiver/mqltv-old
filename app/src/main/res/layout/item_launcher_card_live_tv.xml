<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="180dp"
    android:layout_marginEnd="18dp"
    android:background="@drawable/launcher_card_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants">

    <SurfaceView
        android:id="@+id/launcher_card_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

    <View
        android:id="@+id/launcher_card_video_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#22000000"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/launcher_card_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="start"
            android:src="@drawable/tv_play_icon"
            android:tint="@color/mql_text_secondary"
            android:duplicateParentState="true"
            android:contentDescription="Icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/launcher_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live TV's"
            android:textColor="@color/mql_text_primary"
            android:textSize="19sp"
            android:duplicateParentState="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/launcher_card_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="+5000 Channels"
            android:textColor="@color/mql_text_secondary"
            android:duplicateParentState="true"
            android:textSize="14sp" />

        <View
            android:id="@+id/launcher_card_indicator"
            android:layout_width="56dp"
            android:layout_height="3dp"
            android:layout_marginTop="12dp"
            android:background="@color/mql_accent"
            android:duplicateParentState="true"
            android:visibility="invisible" />

    </LinearLayout>

</FrameLayout>
