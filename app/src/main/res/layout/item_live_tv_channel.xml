<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_tv_channel_tile"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/live_tv_channel_tile_bg"
    android:padding="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/live_tv_channel_logo_bg"
        android:foregroundGravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/live_tv_channel_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Channel" />

    </FrameLayout>

    <TextView
        android:id="@+id/live_tv_channel_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="001"
        android:textColor="#D9E2F2"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
