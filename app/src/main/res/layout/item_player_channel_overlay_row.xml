<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_channel_row"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:background="@drawable/player_channel_row_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/player_channel_row_number"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="#22000000" />

    <FrameLayout
        android:id="@+id/player_channel_row_logo"
        android:layout_width="44dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:background="#10FFFFFF">

        <ImageView
            android:id="@+id/player_channel_row_logo_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/player_channel_row_logo_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="CHANNEL\nLOGO"
            android:textColor="#FF2A78FF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:importantForAccessibility="no" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/player_channel_row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Channel 01"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/player_channel_row_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Program info LIVE TV"
            android:textColor="#B3FFFFFF"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <ProgressBar
            android:id="@+id/player_channel_row_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:max="1000"
            android:progress="0"
            android:progressDrawable="@drawable/player_channel_row_progress_bg" />

    </LinearLayout>

</LinearLayout>
