<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_channel_overlay_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Light dim for the whole screen when overlay is open -->
    <View
        android:id="@+id/player_channel_overlay_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000" />

    <!-- Left panel (channel list) -->
    <LinearLayout
        android:id="@+id/player_channel_overlay_panel"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/player_channel_panel_bg"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <LinearLayout
            android:id="@+id/player_channel_overlay_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/player_channel_overlay_arrow_left"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="‹"
                android:textColor="#FFFFFFFF"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/player_channel_overlay_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Category"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/player_channel_overlay_arrow_right"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="›"
                android:textColor="#FFFFFFFF"
                android:textSize="22sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player_channel_overlay_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="14dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:clipToPadding="false"
            android:overScrollMode="never" />

    </LinearLayout>

    <!-- Program/info card (bottom-right) -->
    <LinearLayout
        android:id="@+id/player_channel_overlay_info"
        android:layout_width="540dp"
        android:layout_height="160dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="22dp"
        android:orientation="vertical"
        android:background="@drawable/player_info_card_bg"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <FrameLayout
                android:id="@+id/player_channel_overlay_info_logo"
                android:layout_width="44dp"
                android:layout_height="34dp"
                android:background="#10FFFFFF">

                <ImageView
                    android:id="@+id/player_channel_overlay_info_logo_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    android:importantForAccessibility="no" />

                <TextView
                    android:id="@+id/player_channel_overlay_info_logo_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="CHANNEL\nLOGO"
                    android:textStyle="bold"
                    android:textSize="8sp"
                    android:textColor="#FF2A78FF"
                    android:importantForAccessibility="no" />

            </FrameLayout>

            <TextView
                android:id="@+id/player_channel_overlay_info_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="1"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/player_channel_overlay_info_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Channel"
                android:textColor="#FFFFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ProgressBar
            android:id="@+id/player_channel_overlay_info_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:max="1000"
            android:progress="0"
            android:progressDrawable="@drawable/player_info_progress_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_channel_overlay_info_now_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 - 00:30"
                android:textColor="#CCFFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/player_channel_overlay_info_now_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="18dp"
                android:text="Now Playing Program"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_channel_overlay_info_next_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:30 - 01:00"
                android:textColor="#CCFFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/player_channel_overlay_info_next_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="18dp"
                android:text="Next Program"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
