<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>User - mql_manager</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <%- include('partials_header'); %>
  <main>
    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <% if (user) { %>
    <div class="grid">
      <div class="card">
        <h2 style="margin-top:0;">User #<%= user.id %></h2>
        <p><strong>Username:</strong> <%= user.username %></p>
        <p><strong>Display name:</strong> <%= user.displayName %></p>
        <p><small>Created: <%= user.createdAt %></small></p>

        <form method="post" action="/users/<%= user.id %>/delete" onsubmit="return confirm('Delete this user?')">
          <button class="btn danger" type="submit">Delete user</button>
          <a class="btn" href="/users">Back</a>
        </form>
      </div>

      <div class="card">
        <h3 style="margin-top:0;">Add subscription</h3>
        <form method="post" action="/users/<%= user.id %>/subscriptions">
          <label>Plan</label>
          <input name="plan" placeholder="e.g. premium" />
          <label>Expires at (RFC3339)</label>
          <input name="expiresAt" placeholder="2030-01-01T00:00:00Z" />
          <div style="height:12px"></div>
          <button class="btn primary" type="submit">Add</button>
        </form>
      </div>
    </div>

    <div style="height:14px"></div>

    <div class="card">
      <h3 style="margin-top:0;">Subscriptions</h3>
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Plan</th>
            <th>Expires</th>
            <th>Created</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% (subscriptions || []).forEach(s => { %>
            <tr>
              <td><%= s.id %></td>
              <td><%= s.plan %></td>
              <td><small><%= s.expiresAt %></small></td>
              <td><small><%= s.createdAt %></small></td>
              <td>
                <form method="post" action="/subscriptions/<%= s.id %>/delete" onsubmit="return confirm('Delete this subscription?')">
                  <input type="hidden" name="userId" value="<%= user.id %>" />
                  <button class="btn" type="submit">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </main>
</body>
</html>
